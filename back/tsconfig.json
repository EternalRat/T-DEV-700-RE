{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./build",
        "strictPropertyInitialization": false,
        "paths": {}
    },
    "include": [
        "src",
        "__tests__"
    ]
}